<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="RADpu" transaction-type="JTA">
    <jta-data-source>jdbc/LMS_dbresource</jta-data-source>
    <class>domain.Bill</class>
    <class>domain.Person</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
      <property name="javax.persistence.jdbc.user" value="LMS_db"/>
      <property name="javax.persistence.jdbc.password" value="LMS_db"/>
    </properties>
  </persistence-unit>
</persistence>
